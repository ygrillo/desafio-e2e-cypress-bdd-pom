  "item": [
    {
      "name": "GET - Listar Produtos",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              ""
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        },
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code é 200\", () => {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Content-Type é text/html com charset UTF-8\", () => {",
              "    pm.response.to.have.header(\"Content-Type\");",
              "    pm.expect(pm.response.headers.get(\"Content-Type\")).to.include(\"text/html; charset=utf-8\");",
              "});",
              "",
              "pm.test(\"Cada product tem campos obrigatórios\", () => {",
              "    const jsonData = pm.response.json();",
              "    jsonData.products.forEach((product, _) => {",
              "        pm.expect(product).to.have.property(\"id\").that.is.a(\"number\");",
              "        pm.expect(product).to.have.property(\"name\").that.is.a(\"string\").and.is.not.empty;",
              "        pm.expect(product).to.have.property(\"price\").that.matches(/Rs\\.\\s*\\d+/);",
              "        pm.expect(product).to.have.property(\"brand\").that.is.a(\"string\").and.is.not.empty;",
              "        pm.expect(product).to.have.property(\"category\").that.is.an(\"object\");",
              "        pm.expect(product.category).to.have.property(\"usertype\").that.is.an(\"object\");",
              "        pm.expect(product.category.usertype).to.have.property(\"usertype\").that.is.a(\"string\");",
              "        pm.expect(product.category).to.have.property(\"category\").that.is.a(\"string\");",
              "    });",
              "});",
              "",
              "pm.test(\"Validações específicas por categoria\", function () {",
              "    const jsonData = pm.response.json();",
              "    const womenProducts = jsonData.products.filter(p => ",
              "        p.category.usertype.usertype === \"Women\"",
              "    );",
              "    const menProducts = jsonData.products.filter(p => ",
              "        p.category.usertype.usertype === \"Men\"",
              "    );",
              "    const kidsProducts = jsonData.products.filter(p => ",
              "        p.category.usertype.usertype === \"Kids\"",
              "    );",
              "    ",
              "    pm.expect(womenProducts.length).to.be.above(5, \"Deve ter vários produtos Women\");",
              "    pm.expect(menProducts.length).to.be.above(2, \"Deve ter produtos Men\");",
              "    pm.expect(kidsProducts.length).to.be.above(5, \"Deve ter produtos Kids\");",
              "});"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
